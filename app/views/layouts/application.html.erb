
<!DOCTYPE html>
<html>
<head>
  <title>grave.io</title>
  <%= favicon_link_tag %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
    <!-- Main navigation fixed on top -->
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
            <a class="brand" href="<%= root_url%>"> grave.io </a>
            <ul class="nav">
              <li class="inactive"> <a>where your code stays alive</a> </li>
            </ul>
            <ul class="nav pull-right">
              <li>
                <%= link_to 'new snippet', new_post_path %>
              </li>
            </ul>
            <ul class="nav pull-right">
              <li>
                <%= link_to 'help', help_path %>
              </li>
            </ul>
            <%= form_tag("/search", :method => "get",
              :class =>"navbar-search pull-right") do %>
              <div class="input-append">
                <%= text_field_tag :query, nil, :class => "span2 search-query",
                  :placeholder => "search" %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
    <div class="container">
      <%= yield %>
    </div>
</body>
</html>
