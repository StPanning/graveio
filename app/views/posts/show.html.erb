<div class="row">
  <p id="notice"><%= notice %></p>
  <h3><%= @post.title %></h3>
  <pre><code><%= @post.content %></code></pre>
  <div class="pull-right">
    <div class="btn-group">
      <%= link_to edit_post_path(@post), :class => "btn btn-small"  do %>
        <i class="icon-edit"></i>
      <% end %>
      <%= link_to post_path(@post, :format => :text),
        :class => "btn btn-small"  do %>
        <i class="icon-download"></i>
      <% end %>
      <%= link_to posts_path, :class => "btn btn-small" do %>
        <i class="icon-align-justify"></i>
      <% end %>
    </div>
  </div>
  <input id="post_url" class="input-xlarge uneditable-input" type="text"
    value="<%= post_url(@post) %>"></input>

  <legend>Comments</legend>
  <% @post.comments.each do |comment| %>
    <blockquote>
      <%= comment.body %>
      <small><%= comment.commenter %></small>
    </blockquote>
  <% end %>
  <%= form_for([@post, @post.comments.build],
    :class => "form-horizontal") do |f| %>
    <div class="control-group">
      <div class="controls">
        <%= f.text_field :commenter, :placeholder=>"Author" %>
      </div>
      <div class="controls">
        <%= f.text_area :body, :placeholder => "leave a comment...",
          :rows => 4 %>
      </div>
      <%= f.submit :class => "btn" %>
    </div>
  <% end %>
</div>
